# layouts: bsp, stack or float
yabai -m config layout bsp

# vertical/horizontal split when opening new window
yabai -m config window_placement second_child

# padding
yabai -m config top_padding 12
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

# mouse settings
yabai -m config mouse_follows_focus off # do not move mouse with focus
yabai -m config mouse_modifier alt      # while holding alt...
yabai -m config mouse_action1 move      # left click + drag to move window
yabai -m config mouse_action2 resize    # right click + drag to resize window
yabai -m config mouse_drop_action swap  # swap windows locations on center drag

# diable specific apps
yabai -m rule --add  app="^System Settings$" manage=off
yabai -m rule --add  app="^Calculator$" manage=off
yabai -m rule --add  app="^Karabiner-Elements$" manage=off
yabai -m rule --add  app="^Microsoft Remote Desktop$" manage=off
